<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/preview_frame_overlay"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:orientation="vertical">

   	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="0dip"
	    android:layout_weight="1"
	    android:gravity="center"
		android:visibility="gone"
	    android:orientation="vertical" >

		<TextView
			android:id="@+id/hint_text"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textSize="20sp"
			android:textColor="@android:color/white" />
		<View
		    android:id="@+id/view_finder"
		    android:layout_width="400dip"
		    android:layout_height="80dip"
		    android:layout_gravity="center"
		    android:background="@drawable/viewfinder_white" />
		<TextView
		    android:id="@+id/num_found_text"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:textSize="20sp"
		    android:textColor="@android:color/white" />

	</LinearLayout>
	<com.journeyapps.barcodescanner.CompoundBarcodeView
		android:id="@+id/barcode_scanner"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_above="@+id/buttons_view"
		>

	</com.journeyapps.barcodescanner.CompoundBarcodeView>

	<LinearLayout 
		android:id="@+id/buttons_view"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dip"
		android:orientation="horizontal"
		android:visibility="gone"
		android:layout_alignParentBottom="true"
		android:gravity="center">

		<Button
		    android:id="@+id/button_toggle_torch"
		    android:layout_width="90dip"
		    android:layout_height="40dip"
		    android:text="@string/light" />


 	 	<Button
 	 	    android:contentDescription="@string/no_item_image"
 	 	    android:id="@+id/button_request_image"
 	 	    android:layout_width="90dip"
 	 	    android:layout_height="40dip"
			android:visibility="gone"
 	 	    android:text="@string/getImage_button" />

		<Button
		    android:id="@+id/button_done"
		    android:layout_width="90dip"
		    android:layout_height="40dip"
			android:visibility="gone"
		    android:text="@string/done_button" />
 
	</LinearLayout>
	
</RelativeLayout>
