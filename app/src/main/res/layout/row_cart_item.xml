<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imgCartItem"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_vertical"
        android:contentDescription="@string/no_item_image"
        android:src="@drawable/no_item_image" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtItemDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_name"
            android:layout_marginBottom="5dp"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/txtJobNos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_name"
            android:layout_marginBottom="10dp"
            android:textColor="@color/ss_green" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width ="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_margin="10dp" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/no_item_image"
            android:src="@drawable/number_bg" />

        <TextView
            android:id="@+id/txtQuantity"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center" />
    </RelativeLayout>

</LinearLayout>